{% extends 'EstocBundle:Collaborator:collaboratorHome.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" media="all" />
    {{ parent() }}
    {% include 'AvocodeFormExtensionsBundle::stylesheets_assetic_less.html.twig' %}
    {% if form is defined %}
        {{ form_stylesheet(form) }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('components/jquery-ui/ui/minified/jquery-ui.min.js') }}"></script>
    {% include 'AvocodeFormExtensionsBundle::javascripts_assetic_less.html.twig' %}
    {% if form is defined %}
        {{ form_javascript(form) }}
    {% endif %}
    <script type="text/javascript">
        $(document).ready(function(){
            $('.btn-info').hide();
            $('.btn-toggle').hide();
            $('tr:odd').addClass('odd');
//            $(".delete").click(function(){
//                if (!confirm("Do you want to delete")){
//                    return false;
//                }
//            });
        });
    </script>
{% endblock %}

{% block content_collaborator %}
<div class="home-container">
    {{ form_start(form) }}
    {{ form_widget(form.images) }}
    {{ form_widget(form._token) }}
    <div class="btn-toolbar">
        <button type="submit" class="btn">Subir</button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
