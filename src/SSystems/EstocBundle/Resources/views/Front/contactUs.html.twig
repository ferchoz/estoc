{% extends 'EstocBundle::layout.html.twig' %}

{% block extra_header %}
    {{ render(controller('EstocBundle:Front:searchBox')) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
{% endblock %}

{% block content %}
    <div class="container-space home-container">
        {{ form_start(form) }}
        <div class="menu_titulo clearfix pure-g">
            <div class="pure-u-2-3">CONVERSEMOS</div>
            <hr />
        </div>
        <div class="clearfix pure-g">
                <p class="align-left">Puedes LLamarnos al:<br><br>
                    099-833-1029<br><br>
                    O escribirnos a:<br><br>
                    info@estoc.ec<br>
                    colaboradores@estoc.ec
                </p>

                <p class="align-left">O mandarnos un mensaje y te responderemos a la brevedad:</p>
                <div class="large-field">
                    {{ form_widget(form.message) }}
                </div>
        </div>
        <div class="clearfix pure-g">
            <hr />
            <div class="align-right">
                <div class="pure-u">
                    {{ form_widget(form.save) }}
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
